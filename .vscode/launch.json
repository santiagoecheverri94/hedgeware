{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows node cpp debug",
            "type": "cppvsdbg",
            "request": "launch",
            // "preLaunchTask": "node-gyp rebuild",
            "program": "C:\\Program Files\\nodejs\\node.exe",
            "args": [
                // "--inspect-brk",
                "C:\\Users\\santi\\Documents\\trading\\hedgeware\\bin\\dev.js",
                "stop-loss-arb"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                // {
                //     "name": "RANDOM_SNAPSHOT",
                //     "value": "true"
                // },
                {
                    "name": "HISTORICAL_SNAPSHOT",
                    "value": "true"
                },
                {
                    "name": "CPP_NODE_ADDON",
                    "value": "true"
                }
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Linux node cpp debug",
            "type": "cppdbg",
            "request": "launch",
            // "preLaunchTask": "node-gyp rebuild",
            "program": "/usr/local/nodejs/bin/node",
            "args": [
                // "--inspect-brk",
                "/root/hedgeware/bin/dev.js",
                "stop-loss-arb"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                // {
                //     "name": "RANDOM_SNAPSHOT",
                //     "value": "true"
                // },
                {
                    "name": "PRINT_PNL_VALUES",
                    "value": "true"
                },
                {
                    "name": "HISTORICAL_SNAPSHOT",
                    "value": "true"
                },
                {
                    "name": "CPP_NODE_ADDON",
                    "value": "true"
                }
            ],
            "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "node attach debug",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "127.0.0.1",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "continueOnAttach": true,
            "restart": true
        }
    ]
}